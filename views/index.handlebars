<div id="container">
  <div class="jumbotron">
    <h1>Burger Binge!</h1>
    <br>
    <h2>Add a Burger</h2>
    <form class="create-form">
      <div class="form-group">
        <label for="bu">Burger Name:</label>
        <input type="text" id="bu" name="name">
      </div>

      <button type="submit" style="color: black;">Add a Burger</button>
    </form>
  </div>

  <div class="row">
    <div class="col-md-6">
      <h2 id="mainrbox">Uneater Burgers</h2>
      <div id="mainrbox" class="card">
        <div id="mainrbox" class="card-body">
          <ul>
            {{#each burgers}}
            {{#unless devour}}
            {{this.burger_name}}
            {{> burger/burger-block devour=true}}
            {{/unless}}
            {{/each}}
          </ul>

        </div>

      </div>

    </div>
    <div class="col-md-6">
      <div class="container">
        <h2 id="mainlbox">Devoured Burgers</h2>
        <div id="mainlbox" class="card">
          <div id="mainlbox" class="card-body">
            <ul>
              {{#each burgers}}
              {{#if devour}}
              {{this.burger_name}}
              {{/if}}
              {{/each}}
            </ul>
          </div>
       </div>
      </div>
    </div>
  </div>
</div>