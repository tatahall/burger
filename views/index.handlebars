<div id="container">
  <div id="mainbox">
    <div>
    </div>
    <h1>Burger Binge!</h1>
    <br>
    <h2>Add a Burger</h2>
    <form class="create-form">
      <div class="form-group">
        <label for="bu">Burger Name:</label>
        <input type="text" id="bu" name="name">
      </div>

      <button type="submit">Add a Burger</button>
    </form>

  </div>




  <div class="row">
    <div class="col-md-6">
      <div>
        <h2>Uneaten Burgers!</h2>

        <ul>
          {{#each burgers}}
          {{#unless devour}}
          {{this.burger_name}}
          {{> burger/burger-block devour=true}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>


  <div class="col-md-6">
    <div>
      <h2>Devoured Burgers!</h2>

      <ul>
        {{#each burgers}}
        {{#if devour}}
        {{this.burger_name}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>