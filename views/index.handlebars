<h1>Burger Binge!</h1>
<br>
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>

<h2>Uneaten Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless devour}}
      {{this.burger_name}}
      {{> burger/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#if devour}}
      {{this.burger_name}}
      {{> burger/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>

